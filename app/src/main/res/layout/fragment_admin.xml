<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".presentation.screens.admin.AdminFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/event_name_editText"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:hint="Введите название"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/event_description_editText"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:hint="Введите описание события"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Изображение"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/event_image_editText"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:hint="Введите ссылку на превью"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата проведения"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/event_date_editText"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:hint="Введите дату проведения"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категория"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <Spinner
        android:id="@+id/event_category_spinner"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:entries="@array/categories_array"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Состояние"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        />

    <Spinner
        android:id="@+id/event_condition_spinner"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:entries="@array/event_conditions"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_event_btn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/main_brand_color"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить событие"
            android:layout_gravity="center"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>